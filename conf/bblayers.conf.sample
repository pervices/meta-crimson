# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "6"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  path-to-poky/poky/meta \
  path-to-poky/poky/meta-yocto \
  path-to-poky/poky/meta-yocto-bsp \
  path-to-poky/poky/meta-altera \
  path-to-poky/poky/meta-linaro/meta-linaro-toolchain \
  path-to-poky/poky/meta-pervices/common \
  path-to-poky/poky/meta-openembedded/meta-oe \
  path-to-poky/poky/meta-openembedded/meta-filesystems \
  path-to-poky/poky/meta-openembedded/meta-networking \
  path-to-poky/poky/meta-openembedded/meta-python \
  "
BBLAYERS_NON_REMOVABLE ?= " \
  path-to-poky/poky/meta \
  path-to-poky/poky/meta-yocto \
  "
